package node;

import java.awt.ComponentOrientation;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class YPanel extends JPanel {
	private JLabel nameField;
	private JButton butOpen;
	private JButton butDelete;
	private JButton butDeleteLocal;
	private boolean local;
	
	public YPanel (String FileName, boolean local) {
		super (new FlowLayout(FlowLayout.LEFT));
		nameField = new JLabel (FileName);
		add (nameField);
		butOpen = new JButton ("open");
		add (butOpen);
		butDelete = new JButton ("delete");
		add (butDelete);
		this.local = local;
		if (local) {
			butDeleteLocal = new JButton ("butDeleteLocal");
			add (butDeleteLocal);
		}
	}
}
