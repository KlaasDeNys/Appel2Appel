package node;

import java.util.Scanner;

public class Test {

	static NodeGui gui;

	public static void main(String[] args) {
		gui = new NodeGui();
		gui.setVisible(true);

		boolean flag = true;

		Scanner scanner = new Scanner(System.in);

		do {
			System.out.print("\n\nfile name: ");
			String fileName = scanner.nextLine();
			if (fileName.charAt(0) == '0')
				flag = false;
			else {
				System.out.print("local? ");
				String cLocal = scanner.nextLine();
				gui.addFile(fileName, cLocal.charAt(0) == '1');
			}
		} while (flag);

	}

}
